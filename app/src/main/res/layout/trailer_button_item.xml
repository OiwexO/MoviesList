<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/trailer_button_margin"
    app:cardBackgroundColor="@color/purple_500"
    app:cardCornerRadius="@dimen/trailer_button_corner_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/small_padding">

        <TextView
            android:id="@+id/textViewTrailerName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size"
            android:textStyle="bold"
            tools:text="Test trailer name" />

        <ImageView
            android:id="@+id/imageViewPlayTrailer"
            android:layout_width="@dimen/play_trailer_btn_size"
            android:layout_height="@dimen/play_trailer_btn_size"
            android:contentDescription="@string/play_trailer"
            android:src="@android:drawable/ic_media_play" />

    </LinearLayout>

</androidx.cardview.widget.CardView>